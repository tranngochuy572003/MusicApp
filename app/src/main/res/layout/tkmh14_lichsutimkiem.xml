<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background">

    <EditText
        android:id="@+id/etSearch"
        android:layout_width="350dp"
        android:layout_height="35dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/tkmh15_search_background"
        android:drawableLeft="@drawable/tkmh_search"
        android:drawablePadding="10dp"
        android:hint="Bạn muốn nghe gì ?"
        android:padding="5dp"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_marginStart="16dp"
        android:fontFamily="sans-serif-medium"
        android:text="Lịch Sử Tìm Kiếm"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="52dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/btn_bau_troi_moi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/tkmh24_button_background"
        android:padding="10dp"
        android:text="Bầu Trời Mới"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="12dp"
        tools:layout_editor_absoluteY="102dp"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/btn_xoa"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:contentDescription="Delete button"
        android:src="@drawable/tkmh_delete"
        android:tint="#FFFFFF"
        tools:ignore="MissingConstraints,UseAppTint"
        tools:layout_editor_absoluteX="350dp"
        tools:layout_editor_absoluteY="52dp" />

    <!-- Các TextViews cho bài hát đã chỉnh sửa -->
    <TextView
        android:id="@+id/BH1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="sans-serif"
        android:text="1 Bài hát sẽ được set"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="190dp" />

    <TextView
        android:id="@+id/BH2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="sans-serif"
        android:text="2 Bài hát sẽ được set"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="238dp" />

    <TextView
        android:id="@+id/BH3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="sans-serif"
        android:text="3 Bài hát sẽ được set"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="282dp" />

    <!-- Các bài hát khác tiếp tục tương tự như vậy -->

    <LinearLayout
        android:id="@+id/bottom_navigation"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/nav_danh_cho_ban"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/tkmh_danhchoban"
            android:drawablePadding="4dp"
            android:gravity="center"
            android:text="Dành cho bạn"
            android:textSize="12sp"
            android:textColor="@android:color/black" />

        <Button
            android:id="@+id/nav_kham_pha"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/tkmh_khampha"
            android:drawablePadding="4dp"
            android:gravity="center"
            android:text="Khám phá"
            android:textSize="12sp"
            android:textColor="@android:color/black" />

        <Button
            android:id="@+id/nav_ho_so_cua_toi"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/tkmh_hosocuatui"
            android:drawablePadding="4dp"
            android:gravity="center"
            android:text="Hồ sơ của tôi"
            android:textSize="12sp"
            android:textColor="@android:color/black" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
